<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/secondaryColor1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_nombreyapellidocliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_baseline_people_24" />

            <TextView
                android:id="@+id/txt_fechapago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtfechapago"
                android:layout_marginBottom="5dp"
                android:textColor="#FFFFFF"
                android:layout_below="@+id/txt_nombreyapellidocliente"
                android:textSize="16sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_baseline_today_24" />

            <TextView
                android:id="@+id/txtfechadepago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/txt_nombreyapellidocliente"
                android:layout_toEndOf="@+id/txt_fechapago"
                android:layout_centerHorizontal="true"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_fechavenc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtfechavenc"
                android:textColor="#FFFFFF"
                android:layout_below="@+id/txt_fechapago"
                android:textSize="16sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_baseline_today_24" />

            <TextView
                android:id="@+id/txtfechavenc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/txt_fechavenc"
                android:layout_below="@+id/txt_fechapago"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_disciele"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/disciplina"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textColor="#FFFFFF"
                android:layout_below="@+id/txtfechavenc"
                android:textSize="16sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_baseline_fitness_center_24" />

            <TextView
                android:id="@+id/txtdisciele"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/txt_disciele"
                android:layout_below="@+id/txtfechavenc"
                android:textSize="16sp"
                android:textStyle="bold"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>