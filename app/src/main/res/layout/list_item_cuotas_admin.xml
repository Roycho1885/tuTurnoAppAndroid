<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/browser_actions_title_color"
    app:cardCornerRadius="20dp"
    app:cardUseCompatPadding="false"
    app:cardPreventCornerOverlap="true">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/secondaryColor1"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="false"
        app:cardPreventCornerOverlap="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtnyacuotasadmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="nombre"
                android:layout_marginStart="10dp"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_baseline_people_24" />

            <TextView
                android:id="@+id/txt_ultimopago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtultimopago"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:textColor="#FFFFFF"
                android:layout_below="@+id/txtnyacuotasadmin"
                android:textSize="16sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_baseline_today_24" />

            <TextView
                android:id="@+id/txtultimopago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColor="#FFFFFF"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/txt_ultimopago"
                android:layout_below="@+id/txtnyacuotasadmin"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_fechavenc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtfechavenc"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"
                android:textColor="#FFFFFF"
                android:layout_below="@+id/txtultimopago"
                android:textSize="16sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_baseline_today_24" />

            <TextView
                android:id="@+id/txtfechavenc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/txt_fechavenc"
                android:layout_below="@+id/txtultimopago"
                android:textSize="16sp"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/txt_estado"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:layout_marginStart="10dp"
                android:text="@string/txtestado"
                android:layout_below="@+id/txtfechavenc"
                android:textSize="16sp"
                app:drawableStartCompat="@drawable/ic_baseline_info_24"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/imgestado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:layout_alignEnd="@id/txt_estado"
                android:layout_below="@+id/txtfechavenc"
                android:contentDescription="TODO" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>