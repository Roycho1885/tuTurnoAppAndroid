<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/browser_actions_title_color"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_horaeli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hora"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_baseline_alarm_24" />

            <TextView
                android:id="@+id/txt_cupoeli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="cupo"
                android:textColor="#FFFFFF"
                android:layout_below="@+id/txt_horaeli"
                android:textSize="18sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_baseline_people_24" />

            <TextView
                android:id="@+id/txt_diaseli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="dias"
                android:textColor="#FFFFFF"
                android:layout_below="@+id/txt_cupoeli"
                android:textSize="18sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_baseline_today_24" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>