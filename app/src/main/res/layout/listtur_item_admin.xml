<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/browser_actions_title_color"
    app:cardCornerRadius="20dp"
    app:cardUseCompatPadding="false"
    app:cardPreventCornerOverlap="true">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/secondaryColor1"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="false"
        app:cardPreventCornerOverlap="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_nombreyapecli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nombre"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_baseline_people_24" />

            <TextView
                android:id="@+id/txt_direccioncli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="direccion"
                android:textColor="#FFFFFF"
                android:layout_alignStart="@+id/txt_nombreyapecli"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_below="@+id/txt_nombreyapecli"
                app:drawableStartCompat="@drawable/ic_baseline_home_24" />

            <TextView
                android:id="@+id/txt_dnicli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dni"
                android:textColor="#FFFFFF"
                android:layout_alignStart="@+id/txt_nombreyapecli"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_below="@+id/txt_direccioncli"
                app:drawableStartCompat="@drawable/ic_baseline_credit_card_24" />

            <TextView
                android:id="@+id/txt_disciplinacli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:textColor="#FFFFFF"
                android:text="disci"
                android:layout_below="@+id/txt_dnicli"
                android:textSize="15sp"
                app:drawableStartCompat="@drawable/ic_baseline_fitness_center_24"/>

            <TextView
                android:id="@+id/txt_diaturnocli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_alignStart="@+id/txt_disciplinacli"
                android:textColor="#FFFFFF"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/txt_disciplinacli"
                android:text="dia"
                android:textSize="15sp"
                app:drawableStartCompat="@drawable/ic_baseline_today_24"/>

            <TextView
                android:id="@+id/txt_horaturnocli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hora"
                android:textColor="#FFFFFF"
                android:layout_alignStart="@+id/txt_disciplinacli"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/txt_diaturnocli"
                android:textSize="15sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_baseline_alarm_24" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>