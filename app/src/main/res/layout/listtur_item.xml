<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/browser_actions_title_color"
    app:cardCornerRadius="20dp"
    app:cardUseCompatPadding="false"
    app:cardPreventCornerOverlap="true">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/secondaryColor1"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="false"
        app:cardPreventCornerOverlap="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_nombreyape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="nombre"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_baseline_people_24" />

            <TextView
                android:id="@+id/txt_disciplina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:textColor="#FFFFFF"
                android:text="disci"
                android:layout_below="@+id/txt_nombreyape"
                android:textSize="15sp"
                app:drawableStartCompat="@drawable/ic_baseline_fitness_center_24"/>

            <TextView
                android:id="@+id/txt_diaturno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/txt_disciplina"
                android:text="dia"
                android:textSize="15sp"
                app:drawableStartCompat="@drawable/ic_baseline_today_24"/>

            <TextView
                android:id="@+id/txt_horaturno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hora"
                android:textColor="#FFFFFF"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/txt_diaturno"
                android:textSize="15sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_baseline_alarm_24" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>